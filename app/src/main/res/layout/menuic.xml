            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/ic7404"
            android:src="@drawable/ic7404"
            android:layout_below="@+id/ic74614"
            android:layout_centerHorizontal="true" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/icl293d"
            android:src="@drawable/l293d"
            android:layout_below="@+id/ic7404"
            android:layout_centerHorizontal="true" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/ic555"
            android:src="@drawable/ic555"
            android:layout_below="@+id/icl293d"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="List IC"
            android:id="@+id/textView3"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</ScrollView>